syntax on
let mapleader =" "

set pastetoggle=<F2>
set tabstop=2
set shiftwidth=2
set encoding=utf-8
set expandtab
set smartindent
set number relativenumber
set nowrap
set smartcase
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
set incsearch
set splitbelow splitright
set colorcolumn=80
highlight ColorColumn ctermbg=0 guibg=lightgrey

" ------------------------- "
" Shortcuts "
" ------------------------- "
" switch panes with just ctrl + direction keys "
map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l
